@model MiniStop.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Form</title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
<div class="login-box">
        <h2>Đăng Nhập</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="input-group">
                <input asp-for="Username" required placeholder=" " />
                <label asp-for="Username">Tên đăng nhập</label>
            </div>
            <div class="input-group">
                <input asp-for="Password" type="password" required placeholder=" " />
                <label asp-for="Password">Mật khẩu</label>
            </div>
            <button class="btn" type="submit">Đăng Nhập</button>
        </form>

        <div class="signup-link">
            Chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký</a>
        </div>

</div>
</body>
</html>